<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paper_beige"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Herramientas"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/text_brown"
            android:paddingBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Respiración 4-6: inhalá 4 segundos, exhalá 6."
            android:textColor="@color/text_brown"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Journaling breve: escribí sin parar por 3 minutos."
            android:textColor="@color/text_brown"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grounding 5-4-3-2-1: nombrá 5 cosas que ves, 4 que tocás, 3 que oís, 2 que olés, 1 que saboreás."
            android:textColor="@color/text_brown"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pausa de autocompasión: reconocé tu emoción, validala y decite algo amable."
            android:textColor="@color/text_brown" />

    </LinearLayout>
</ScrollView>
